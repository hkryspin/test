{% extends '::layout.html.twig' %}

{% block title %}Kontakt | {% endblock %}

{% block content %}

<section class="container" style="margin-top: 5rem; margin-bottom: 5rem;">

    <div class="row">

        <div class="col-md-5">
            <address>
                <h1 style="font-size:20px;">INFORMACJE KONTAKTOWE</h1>
                <p><i class="fa fa-institution"></i> PPU "eSPa"</p>
                <hr />
                <p><i class="fa fa-street-view"></i> Paweł Szumski</p>
                <p><i class="fa fa-road"></i> Klementyny Hoffmanowej 1a</p>
                <p><i class="fa fa-building"></i> 78-200 Białogard</p>
                <hr />
                <p><i class="nip">NIP</i> 672-100-60-88</p>
                <hr />
                <p><i class="fa fa-phone"></i> +48 (94) 312 0867</p>
                <p><i class="fa fa-fax"></i> +48 (94) 312 5539</p>
                <p><i class="fa fa-envelope"></i> espa@espa.com.pl</p>
            </address>
        </div>

        <div class="col-md-7">
            <section id="map" class="map-container m-shadow">
                <script>
                    function initMap() {
                        var myLatLng = {lat: 54.003995, lng: 15.993886};

                        var map = new google.maps.Map(document.getElementById('map'), {
                            zoom: 15,
                            center: myLatLng,
                            scrollwheel:  false
                        });

                        var marker = new google.maps.Marker({
                            position: myLatLng,
                            map: map,
                            title: 'ESPA'
                        });
                    }
                </script>
                <script async defer
                        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBdfX9End5ovq15yd5pXnsZJIR0cF-eqo&callback=initMap">
                </script>
            </section>
        </div>

    </div>
</section>

<section class="container">
    <div class="card col-md-8 offset-md-2 m-shadow">
        <div class="card-block">

            <div class="form-header m-shadow-big" style="background-color: #3A3738">
                <h3><i class="fa fa-envelope"></i> Napisz do nas:</h3>
            </div>

            <div class="done" style="display: none;">
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    Twoja wiadomość została wysłana. Dziękujemy!
                </div>
            </div>

            <form action="" id="main-contact-form" class="form">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="mc-name" class="sr-only">Imię i Nazwisko</label>
                        <input type="text" class="form-control" id="mc-name" name="mc-name" placeholder="Imię i Nazwisko">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="mc-email" class="sr-only">Firma</label>
                        <input type="text" class="form-control" id="mc-company" name="mc-company" placeholder="Firma">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="mc-email" class="sr-only">E-mail</label>
                        <input type="text" class="form-control" id="mc-email" name="mc-email" placeholder="E-mail">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="mc-email" class="sr-only">Telefon</label>
                        <input type="text" class="form-control" id="mc-phone" name="mc-phone" placeholder="Telefon">
                    </div>
                </div>
                <div class="form-group">
                    <label for="mc-msg" class="sr-only">Example textarea</label>
                    <textarea class="form-control" id="mc-msg" name="mc-msg" rows="4" placeholder="Wiadomość"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success">Wyślij</button>
            </form>

        </div>
    </div>
</section>

{% endblock %}