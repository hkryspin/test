{% extends '::layout.html.twig' %}

    {% block title %}O nas | {% endblock %}

    {% block content %}

<div class="site-title" style="position: relative; background: url({{ asset('images/site-title-about.jpg') }}) center top no-repeat; width: 100%; background-size: cover;">
    <div class="container" style="position: relative; z-index: 1">
        <h2>Nasza Firma</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="breadcrumb-item active">O Nas</li>
        </ol>
    </div>
</div>

<section id="about_us">

    <div class="container">
        <div class="row">

        <div class="col-xs-12 col-xl-6 text-justify">

        <h4 class="m-b-1 color-autumn">{% trans %}about.h1{% endtrans %}</h4>
        <p class="m-b-2">
            {% trans %}about.p1{% endtrans %}
        </p>

        <h4 class="m-b-1 color-autumn">{% trans %}about.h2{% endtrans %}</h4>
        <p class="m-b-2">
            {% trans %}about.p2{% endtrans %}
        </p>

        <h4 class="m-b-1 color-autumn">{% trans %}about.h3{% endtrans %}</h4>
        <p class="m-b-2">
            {% trans %}about.p3{% endtrans %}
        </p>

        </div>

        <div class="col-xs-12 col-xl-6 about-img m-t-3">
            <img src="{{ asset('images/espa-at-work.jpg') }}" alt="eSPa at work" />
        </div>

        </div>
    </div>

</section>

{% endblock %}